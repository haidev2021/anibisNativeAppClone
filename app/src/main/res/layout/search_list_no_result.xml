<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:saveEnabled="false"
    android:background="@color/light_gray_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/search_result_header_height">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/big_edge_margin"
            android:paddingLeft="@dimen/edge_margin"
            android:paddingRight="@dimen/edge_margin">
            <include
                android:id="@+id/warning"
                layout="@layout/warning" />
        </LinearLayout>

        <Button
            style="@style/WhiteButton"
            android:id="@+id/btnNoResultFilter"
            android:contentDescription="apps.action.filter.new"
            android:layout_marginTop="@dimen/big_edge_margin"/>

        <Button
            style="@style/WhiteButton"
            android:id="@+id/btnNoResultNewSearch"
            android:contentDescription="apps.noresults.newsearch.action"
            android:layout_marginTop="6dp"/>

        <Button
            android:id="@+id/btnNoResultSavedSearch"
            style="@style/BlueButton"
            android:contentDescription="apps.noresults.createsearchjob.action"
            android:layout_marginTop="6dp"/>

        <Button
            android:id="@+id/btnNoResultUnsaveSearch"
            style="@style/GreenButton"
            android:contentDescription="apps.noresults.createsearchjob.action"
            android:visibility="gone"
            android:layout_marginTop="6dp"/>

    </LinearLayout>
</ScrollView>
