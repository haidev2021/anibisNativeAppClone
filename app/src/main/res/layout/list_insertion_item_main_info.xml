<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">

    <RelativeLayout
        style="@style/list_image_layout"
        android:layout_margin="3dp">

        <View style="@style/list_image_layout"/>

        <ProgressBar
            android:id="@+id/pbLoading"
            style="@style/list_image_loading"
            android:theme="@style/AnibisTheme.WhiteAccent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:src="@drawable/img_no_picture"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="22dp"/>

        <ImageView
            android:id="@+id/image"
            style="@style/list_image"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="94dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
<!--        <TextView-->
<!--            android:id="@+id/txtTitle"-->
<!--            style="@style/textview_blue"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:maxLines="@integer/insertion_title_max_lines"-->
<!--            android:layout_marginRight="13dp"-->
<!--            android:ellipsize="end"/>-->

        <TextView
            android:id="@+id/txtPrice"
            style="@style/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="13dp"/>

        <TextView
            android:id="@+id/txtInsertionStatistics"
            style="@style/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:maxLines="1"
            android:layout_marginRight="13dp"/>

    </LinearLayout>

</LinearLayout>