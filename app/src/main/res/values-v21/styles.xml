<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <!--
        Base application theme for API 21+. This theme replaces
        AnibisTheme from resources/values/styles.xml on API 21+ devices.
    -->
  <style name="AnibisTheme" parent="AnibisTheme.Base">
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
  </style>

  <style name="AnibisTheme.NoActionbar" parent="AnibisTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AnibisTheme.Splash" parent="AnibisTheme.Base">
    <item name="android:windowBackground">@drawable/splash_background</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    <item name="android:statusBarColor">@color/theme_primary_dark</item>
  </style>
  <style name="BaseRippleButton" parent="BaseButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:backgroundTint">@color/theme_accent</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="BlueButton" parent="BaseRippleButton">
    <item name="android:textColor">@color/blue_button_text</item>
    <item name="android:backgroundTint">@color/blue_button_bg</item>
    <item name="android:theme">@android:style/Theme.Material</item>
  </style>

  <style name="WhiteButton" parent="BaseRippleButton">
    <item name="android:textColor">@color/white_button_text</item>
    <item name="android:backgroundTint">@color/white_button_bg</item>
  </style>

  <style name="GreenButton" parent="BaseRippleButton">
    <item name="android:textColor">@color/green_button_text</item>
    <item name="android:backgroundTint">@color/green_button_bg</item>
  </style>

  <style name="BaseBottomButton">
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="BottomGreenButton" parent="BaseBottomButton">
    <item name="android:background">@drawable/bottom_green_button_bg</item>
  </style>

  <style name="BottomBlueButton" parent="BaseBottomButton">
    <item name="android:background">@drawable/bottom_blue_button_bg</item>
  </style>

</resources>
